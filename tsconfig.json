{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "module": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "paths": {
      "@/*": ["./src/*"],
      "emiya-components": ["./src/"],
      "emiya-components/*": ["./src/*"]
    },
    "strict": true
  },
  "exclude": ["**/node_modules"],
  "include": ["src"]
}
